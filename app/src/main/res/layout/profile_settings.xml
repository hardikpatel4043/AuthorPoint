<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hardik.myapplication.ProfileSettings">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/default_avatar" />

    <Button
        android:id="@+id/profile_change_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimaryDark"
        android:text=" Change Password " />

    <ImageView
        android:id="@+id/profile_setting_change_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/profile_change_password_button"
        android:layout_alignStart="@+id/profile_image"
        android:layout_marginStart="88dp"
        app:srcCompat="@drawable/change_picture" />

</RelativeLayout>

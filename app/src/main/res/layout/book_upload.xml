<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hardik.myapplication.BookUpload">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="26dp"
        android:id="@+id/book_upload_name">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/book_upload_name"
        android:layout_below="@+id/book_upload_name"
        android:layout_marginTop="22dp"
        android:id="@+id/book_upload_type">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Type" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/book_upload_type"
        android:layout_below="@+id/book_upload_type"
        android:layout_marginTop="21dp"
        android:id="@+id/book_upload_language">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Book Language" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/book_upload_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/book_upload_language"
        android:layout_below="@+id/book_upload_language"
        android:layout_marginTop="16dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/book_upload_price"
        android:layout_below="@+id/book_upload_price"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="50dp"
        android:id="@+id/book_upload_image">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Book Image" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/book_upload_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/book_upload_image"
        android:layout_below="@+id/book_upload_select_pdf"
        android:layout_marginEnd="86dp"
        android:layout_marginTop="35dp"
        android:background="@color/colorPrimaryDark"
        android:text="  Upload Book " />

    <ImageView
        android:id="@+id/upload_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/book_upload_image"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@android:drawable/ic_menu_upload" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/book_upload_select_pdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/book_upload_image"
        android:layout_below="@+id/book_upload_image"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="16dp"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Select Pdf" />
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/upload_pdf_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/upload_image_button"
        android:layout_alignTop="@+id/book_upload_select_pdf"
        android:layout_marginTop="11dp"
        android:src="@android:drawable/ic_menu_upload" />

</RelativeLayout>

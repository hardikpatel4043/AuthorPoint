<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.hardik.myapplication.BookList">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_list_image"
            android:layout_width="122dp"
            android:layout_height="118dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/todo"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/com_facebook_button_background"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="29dp" />

        <TextView
            android:id="@+id/book_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="40dp" />

        <TextView
            android:id="@+id/book_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="75dp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="99dp" />

        <TextView
            android:id="@+id/book_list_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="45dp" />
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>

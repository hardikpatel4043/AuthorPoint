<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.hardik.myapplication.viewPager.FriendChatsTab">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/friend_chat_tab_profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/default_avatar"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="36dp" />

        <TextView
            android:id="@+id/friend_chat_tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="52dp" />

        <ImageView
            android:id="@+id/friend_chat_tab_online_image"
            android:layout_width="15dp"
            android:layout_height="13dp"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/online"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/friends_chats_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="55dp"
            android:maxLines="1"
            android:text="@string/textview" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

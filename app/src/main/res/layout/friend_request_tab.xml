<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/friend_request_tab_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/default_avatar"
               />

            <!--<ImageButton-->
            <!--android:id="@+id/accept_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignTop="@+id/friend_request_tab_name"-->
            <!--android:layout_marginStart="20dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:layout_toEndOf="@+id/friend_request_tab_name"-->
            <!--android:src="@android:drawable/checkbox_on_background" />-->

            <!--<ImageButton-->
            <!--android:id="@+id/decline_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignStart="@+id/accept_button"-->
            <!--android:layout_below="@+id/friend_request_tab_name"-->
            <!--android:layout_marginStart="63dp"-->
            <!--android:src="@android:drawable/btn_dialog" />-->

            <Button
                android:id="@+id/accept_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="top|right"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimaryDark"
                android:text="Accept"
               />

            <Button
                android:id="@+id/decline_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/friend_request_tab_image"
                android:layout_alignStart="@+id/friend_request_tab_name"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorPrimaryDark"
                android:text="Decline"
                />

            <TextView
                android:id="@+id/friend_request_tab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/friend_request_tab_image"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/friend_request_tab_image"
                android:text="TextView"
                android:textSize="18sp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>
